<config>
    <sections>
        <mageworx_tweaks translate="label" module="mageworx">
            <label>Autocomplete Search Config</label>
            <tab>mageworx</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <searchautocomplete translate="label" module="searchautocomplete">
                    <label>Search Autocomplete</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enabled>                        
                        
                        <highlighting_enabled>
                            <label>Enable search terms highlighting</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </highlighting_enabled>
                        
                        <separator_enabled>
                            <label>Block separator</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </separator_enabled>                        
                        
                        <suggested_searches>
                            <label>Suggested Searches</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </suggested_searches>                        
                        <suggested_searches_results>
                            <label>Suggested Searches Results</label>
                            <frontend_type>text</frontend_type>                                                        
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </suggested_searches_results>                        
                        
                        <search_products>
                            <label>Search Products</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </search_products>
                        <product_search_results translate="label">
                            <label>Product Search Results</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </product_search_results>  
                        <show_product_results_grouped_by_categories>
                            <label>Show Product Results Grouped By Categories</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>75</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </show_product_results_grouped_by_categories>
                        <product_image_size translate="label">
                            <label>Product Image Size</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </product_image_size>                        
                        <product_search_results_sort_order translate="label">
                            <label>Product Search Results Sort Order</label>
                            <frontend_type>select</frontend_type>
                            <source_model>searchautocomplete/system_config_source_product_search_result_sort_order</source_model>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </product_search_results_sort_order>
                        <product_search_result_fields>
                            <label>Product Search Result Fields</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>searchautocomplete/system_config_source_product_search_result_fields</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </product_search_result_fields>
                        <product_short_description_size translate="label comment">
                            <label>Product Short Description Size</label>
                            <comment>Number of words</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>110</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </product_short_description_size>
                        <product_title_size translate="label comment">
                            <label>Product Title Size</label>
                            <comment>Number of words</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>120</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </product_title_size>
                        
                        <search_categories>
                            <label>Search Categories</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>130</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </search_categories>
						
                        <category_search_results translate="label">
                            <label>Category Search Results</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>139</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </category_search_results>                     
                        
						
                        <search_results_priority_name translate="label">
                            <label>Priority Weight for Name</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>140</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </search_results_priority_name> 
						
                        <search_results_priority_desc translate="label">
                            <label>Priority Weight for Description</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>142</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </search_results_priority_desc> 
						
						<search_memcache_host translate="label">
                            <label>Memcache Host :</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>143</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </search_memcache_host> 
						
                        <search_memcache_port translate="label">
                            <label>Memcache Port :</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>144</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </search_memcache_port> 
						

                        <search_cms>
                            <label>Search CMS</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>150</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </search_cms>                        
                        <filter_cms_pages translate="label">
                            <label>Filter CMS Pages</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>mageworx/system_config_source_cms_pages</source_model>
                            <sort_order>160</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <can_be_empty>1</can_be_empty>
                        </filter_cms_pages>                        
                        <cms_search_result_fields>
                            <label>CMS Search Result Fields</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>searchautocomplete/system_config_source_cms_search_result_fields</source_model>
                            <sort_order>170</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cms_search_result_fields>
                        
                        <exlude_words_in_search translate="label">
                            <label>Ignorar termos na busca</label>
                            <comment>Os termos devem ser separados por vírgula. Ex.: de, para, os</comment>
                            <frontend_type>Textarea</frontend_type>
                            <sort_order>180</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </exlude_words_in_search>                        
                    </fields>
                </searchautocomplete>
            </groups>
        </mageworx_tweaks>
    </sections>
</config>
